#!/bin/sh
#

KIND="myfilebrowser"

PARAM="-c /opt/etc/myfilebrowser/server.conf -h /opt/share/myfilebrowser/"

# always enabled
ENABLE=1

start() {
	if [ $ENABLE -eq 1 ] ; then
		sed -ri "s,/cgi-bin:admin:.*,/cgi-bin:$(echo $(grep "^/:admin:"  /etc/httpd.conf) | cut -c 3- ),g" /opt/etc/myfilebrowser/server.conf
		PID=$(pgrep -f "httpd ${PARAM}")
		if [ ${PID:-empty} = "empty" ] ; then
			echo "Starting $KIND service..."
		    httpd ${PARAM} -p 8081 -r SNAKE
		fi
	fi
}

stop() {
	echo "Shutting down $KIND service..."
	pkill -9 -f "httpd ${PARAM}"
}

restart() {
	stop
	sleep 1
	start
}

webstatus(){
	PID=$(pgrep -f "httpd ${PARAM}")
	if [ ${PID:-empty} = "empty" ] ; then
		echo -n "$KIND is not running"
    else
    	echo -n "$KIND is running"
    fi  		
}

case "$1" in
  start)
  	start
	;;
  stop)
  	stop
	;;
  restart)
  	restart
	;;
  reload)
  	restart
	;;
  webstatus)
	webstatus
	;;
  *)
	echo "Usage: $0 {start|stop|restart|reload}"
	exit 1
esac


